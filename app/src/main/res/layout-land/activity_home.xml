<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/white">

    <include
        android:id="@+id/include"
        layout="@layout/home_action_bar" />


    <TextView
        android:id="@+id/line"
        android:layout_width="600dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/line"
        app:layout_constraintBottom_toBottomOf="@+id/include"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/include" />


    <Button
        android:id="@+id/all"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_category"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/all_services"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/all"
        app:layout_constraintStart_toEndOf="@+id/all" />

    <Button
        android:id="@+id/postAdButton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/buttons"
        android:padding="4dp"
        android:text="@string/post_your_ad"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/include" />


    <ImageButton
        android:id="@+id/food_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/food"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/black"
        android:text="@string/food"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/food_image"
        app:layout_constraintEnd_toEndOf="@+id/food_image"
        app:layout_constraintStart_toStartOf="@+id/food_image"
        app:layout_constraintTop_toTopOf="@+id/food_image" />

    <ImageButton
        android:id="@+id/property_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/property"
        app:layout_constraintStart_toEndOf="@+id/food_image"
        app:layout_constraintTop_toTopOf="@+id/food_image" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/black"
        android:text="@string/property"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/property_image"
        app:layout_constraintEnd_toEndOf="@+id/property_image"
        app:layout_constraintStart_toStartOf="@+id/property_image"
        app:layout_constraintTop_toTopOf="@+id/property_image" />

    <ImageButton
        android:id="@+id/services_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/services"
        app:layout_constraintStart_toEndOf="@+id/property_image"
        app:layout_constraintTop_toTopOf="@+id/property_image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/black"
        android:text="@string/services"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/services_image"
        app:layout_constraintEnd_toEndOf="@+id/services_image"
        app:layout_constraintStart_toStartOf="@+id/services_image"
        app:layout_constraintTop_toTopOf="@+id/services_image" />

    <ImageButton
        android:id="@+id/cars_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cars"
        app:layout_constraintStart_toStartOf="@+id/food_image"
        app:layout_constraintTop_toBottomOf="@+id/food_image" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/black"
        android:text="@string/cars"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cars_image"
        app:layout_constraintEnd_toEndOf="@+id/cars_image"
        app:layout_constraintStart_toStartOf="@+id/cars_image"
        app:layout_constraintTop_toTopOf="@+id/cars_image" />

    <ImageButton
        android:id="@+id/electronics_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/electronics"
        app:layout_constraintEnd_toEndOf="@+id/business_center"
        app:layout_constraintStart_toEndOf="@+id/beauty_image"
        app:layout_constraintTop_toBottomOf="@+id/business_center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/black"
        android:text="@string/electronics"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/electronics_image"
        app:layout_constraintEnd_toEndOf="@+id/electronics_image"
        app:layout_constraintStart_toStartOf="@+id/electronics_image"
        app:layout_constraintTop_toTopOf="@+id/electronics_image" />


    <ImageButton
        android:id="@+id/appliances_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/appliances"
        app:layout_constraintEnd_toStartOf="@+id/services_image"
        app:layout_constraintStart_toEndOf="@+id/cars_image"
        app:layout_constraintTop_toBottomOf="@+id/property_image" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/black"
        android:text="@string/appliances"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/appliances_image"
        app:layout_constraintEnd_toEndOf="@+id/appliances_image"
        app:layout_constraintStart_toStartOf="@+id/appliances_image"
        app:layout_constraintTop_toTopOf="@+id/appliances_image" />


    <ImageButton
        android:id="@+id/business_center"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_baseline_business_center_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/services_image"
        app:layout_constraintTop_toTopOf="@+id/services_image" />

    <TextView
        android:id="@+id/business_center_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/black"
        android:text="@string/business_center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/business_center"
        app:layout_constraintEnd_toEndOf="@+id/business_center"
        app:layout_constraintStart_toEndOf="@+id/services_image"
        app:layout_constraintTop_toTopOf="@+id/business_center" />

    <ImageButton
        android:id="@+id/beauty_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/beauty"
        app:layout_constraintEnd_toStartOf="@+id/electronics_image"
        app:layout_constraintStart_toEndOf="@+id/appliances_image"
        app:layout_constraintTop_toBottomOf="@+id/services_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="120dp"
        android:background="@color/black"
        android:text="@string/beauty"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/beauty_image"
        app:layout_constraintEnd_toEndOf="@+id/beauty_image"
        app:layout_constraintStart_toStartOf="@+id/beauty_image"
        app:layout_constraintTop_toBottomOf="@+id/services_image" />

    <Button
        android:id="@+id/reviewButton"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/buttons"
        android:text="@string/product_review_community"
        app:layout_constraintEnd_toStartOf="@+id/postAdButton"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/line" />


</androidx.constraintlayout.widget.ConstraintLayout>